    <script>
        $(document).ready(function () {
            $('#calendar').fullCalendar({
                 headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                dayHeaderFormat: {
                    day: '2-digit',
                    month: '2-digit',
                    year: '4-digit'
                },
            });

            $('#timepicker').timepicker({
                timeFormat: 'HH:mm', // Formato de 24 horas
                interval: 15, // Intervalo de 15 minutos
                scrollbar: true
            });
        });
    </script>
